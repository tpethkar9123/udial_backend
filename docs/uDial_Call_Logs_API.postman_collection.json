{
	"info": {
		"_postman_id": "call-logs-api-collection",
		"name": "uDial Call Logs API",
		"description": "Complete API collection for managing call logs in the uDial system. Includes CRUD operations, filtering, pagination, and bulk operations.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000/api",
			"type": "string"
		},
		{
			"key": "authToken",
			"value": "your-clerk-jwt-token",
			"type": "string"
		},
		{
			"key": "callLogId",
			"value": "",
			"type": "string"
		}
	],
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{authToken}}",
				"type": "string"
			}
		]
	},
	"item": [
		{
			"name": "Call Logs CRUD",
			"item": [
				{
					"name": "Get All Call Logs",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/call-logs?page=1&limit=10",
							"host": ["{{baseUrl}}"],
							"path": ["call-logs"],
							"query": [
								{
									"key": "page",
									"value": "1",
									"description": "Page number (default: 1)"
								},
								{
									"key": "limit",
									"value": "10",
									"description": "Items per page (default: 10)"
								}
							]
						},
						"description": "Get paginated list of all call logs with stats"
					},
					"response": []
				},
				{
					"name": "Get Call Log by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/call-logs/{{callLogId}}",
							"host": ["{{baseUrl}}"],
							"path": ["call-logs", "{{callLogId}}"]
						},
						"description": "Get a specific call log by its UUID"
					},
					"response": []
				},
				{
					"name": "Create Call Log",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.id) {",
									"    pm.collectionVariables.set('callLogId', jsonData.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Gaurav Mishra\",\n  \"phoneNumber\": \"+91 99122 33445\",\n  \"callType\": \"INCOMING\",\n  \"duration\": 536,\n  \"simProvider\": \"VI\",\n  \"userEmail\": \"admin@unite.com\",\n  \"notes\": \"Demo scheduled for next week\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/call-logs",
							"host": ["{{baseUrl}}"],
							"path": ["call-logs"]
						},
						"description": "Create a new call log entry"
					},
					"response": []
				},
				{
					"name": "Update Call Log",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"callType\": \"MISSED\",\n  \"duration\": 0,\n  \"notes\": \"Customer did not answer - rescheduling\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/call-logs/{{callLogId}}",
							"host": ["{{baseUrl}}"],
							"path": ["call-logs", "{{callLogId}}"]
						},
						"description": "Update an existing call log"
					},
					"response": []
				},
				{
					"name": "Delete Call Log",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/call-logs/{{callLogId}}",
							"host": ["{{baseUrl}}"],
							"path": ["call-logs", "{{callLogId}}"]
						},
						"description": "Delete a call log by ID"
					},
					"response": []
				}
			]
		},
		{
			"name": "Filtering & Search",
			"item": [
				{
					"name": "Filter by Call Type - INCOMING",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/call-logs?callType=INCOMING",
							"host": ["{{baseUrl}}"],
							"path": ["call-logs"],
							"query": [
								{
									"key": "callType",
									"value": "INCOMING"
								}
							]
						},
						"description": "Get only incoming calls"
					},
					"response": []
				},
				{
					"name": "Filter by Call Type - OUTGOING",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/call-logs?callType=OUTGOING",
							"host": ["{{baseUrl}}"],
							"path": ["call-logs"],
							"query": [
								{
									"key": "callType",
									"value": "OUTGOING"
								}
							]
						},
						"description": "Get only outgoing calls"
					},
					"response": []
				},
				{
					"name": "Filter by Call Type - MISSED",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/call-logs?callType=MISSED",
							"host": ["{{baseUrl}}"],
							"path": ["call-logs"],
							"query": [
								{
									"key": "callType",
									"value": "MISSED"
								}
							]
						},
						"description": "Get only missed calls"
					},
					"response": []
				},
				{
					"name": "Filter by Call Type - UNANSWERED",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/call-logs?callType=UNANSWERED",
							"host": ["{{baseUrl}}"],
							"path": ["call-logs"],
							"query": [
								{
									"key": "callType",
									"value": "UNANSWERED"
								}
							]
						},
						"description": "Get only unanswered calls"
					},
					"response": []
				},
				{
					"name": "Filter by SIM Provider",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/call-logs?simProvider=JIO",
							"host": ["{{baseUrl}}"],
							"path": ["call-logs"],
							"query": [
								{
									"key": "simProvider",
									"value": "JIO"
								}
							]
						},
						"description": "Filter calls by SIM provider (VI, JIO, AIRTEL, BSNL, OTHER)"
					},
					"response": []
				},
				{
					"name": "Filter by User Email",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/call-logs?userEmail=admin@unite.com",
							"host": ["{{baseUrl}}"],
							"path": ["call-logs"],
							"query": [
								{
									"key": "userEmail",
									"value": "admin@unite.com"
								}
							]
						},
						"description": "Get calls for a specific user"
					},
					"response": []
				},
				{
					"name": "Search by Name or Phone",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/call-logs?search=Gaurav",
							"host": ["{{baseUrl}}"],
							"path": ["call-logs"],
							"query": [
								{
									"key": "search",
									"value": "Gaurav"
								}
							]
						},
						"description": "Search in name, phone number, or email"
					},
					"response": []
				},
				{
					"name": "Filter by Date Range",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/call-logs?startDate=2025-12-01&endDate=2025-12-31",
							"host": ["{{baseUrl}}"],
							"path": ["call-logs"],
							"query": [
								{
									"key": "startDate",
									"value": "2025-12-01"
								},
								{
									"key": "endDate",
									"value": "2025-12-31"
								}
							]
						},
						"description": "Filter calls within a date range"
					},
					"response": []
				},
				{
					"name": "Combined Filters",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/call-logs?callType=INCOMING&simProvider=VI&search=Gaurav&page=1&limit=10",
							"host": ["{{baseUrl}}"],
							"path": ["call-logs"],
							"query": [
								{
									"key": "callType",
									"value": "INCOMING"
								},
								{
									"key": "simProvider",
									"value": "VI"
								},
								{
									"key": "search",
									"value": "Gaurav"
								},
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "10"
								}
							]
						},
						"description": "Apply multiple filters at once"
					},
					"response": []
				}
			]
		},
		{
			"name": "Bulk Operations",
			"item": [
				{
					"name": "Bulk Delete Call Logs",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"ids\": [\n    \"uuid-1\",\n    \"uuid-2\",\n    \"uuid-3\"\n  ]\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/call-logs/bulk-delete",
							"host": ["{{baseUrl}}"],
							"path": ["call-logs", "bulk-delete"]
						},
						"description": "Delete multiple call logs at once"
					},
					"response": []
				}
			]
		},
		{
			"name": "User Specific",
			"item": [
				{
					"name": "Get Calls by User Email",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/call-logs/user/admin@unite.com",
							"host": ["{{baseUrl}}"],
							"path": ["call-logs", "user", "admin@unite.com"]
						},
						"description": "Get all call logs for a specific user email"
					},
					"response": []
				}
			]
		},
